{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": ["off"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "no-undef": 0,
    "no-unused-vars": 1,
    "no-param-reassign": 1,
    "no-restricted-globals": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "no-useless-constructor": 0,
    "no-empty-function": 0
  }
}
